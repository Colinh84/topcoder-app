.develop(ng-if="vm.track == 'DEVELOP'")
  .top
    ul.horizontal-stats(id="subtrack-stats")
      li.stat(ng-if="vm.typeStats.rank.rating")
        .value.rating(style="color: {{vm.typeStats.rank.rating | ratingColor}}") {{vm.typeStats.rank.rating | empty}}
          span.square(ng-if="vm.typeStats.rank.rating", style="background-color: {{vm.typeStats.rank.rating | ratingColor}}")
        .name RATING

      li.stat(ng-if="!vm.typeStats.rank.rating && !vm.nonRated")
        .value -
        .name RATING

      li.stat(ng-hide="vm.nonRated")
        .value {{vm.typeStats.rank.overallRank | empty}}
        .name RANK

      li.stat(ng-hide="vm.nonRated")
        .value {{vm.typeStats.rank.overallPercentile / 100 | percentage | empty}}
        .name PERCENTILE

      li.stat
        .value {{vm.typeStats.submissions.submissions | empty}}
        .name CHALLENGES

      li.stat
        .value {{vm.typeStats.wins | empty}}
        .name WINS

      li.stat(ng-hide="vm.nonRated")
        .value {{vm.typeStats.rank.reliability | percentage | empty}}
        .name RELIABILITY

    .tabs
      a.left(id="statistics-tab", ng-click="vm.viewing = 'stats'",
        ng-class="vm.viewing == 'stats' ? 'selected' : ''"
      ) Statistics

      a.right(id="challenges-tab", ng-click="vm.viewing = 'challenges'",
        ng-class="vm.viewing == 'challenges' ? 'selected' : ''"
      ) Challenges

    hr

    section(ng-show="vm.viewing == 'challenges'")
      
      .challenges

        .challenge.tile(ng-repeat="challenge in vm.challenges")
          challenge-tile(challenge="challenge", domain="vm.domain", view="'tile'")      

        .no-challenges(ng-show="!vm.challenges || vm.challenges.length == 0")
          | Sorry, no successful challenges found.

        tc-endless-paginator(state="vm.status.challenges", page-params="vm.pageParams")

    .stats(ng-show="vm.viewing == 'stats' && profileVm.status.stats === 'ready'")
      .graphs(ng-if="vm.history")
        distribution-graph(promise="vm.distributionPromise", rating="vm.typeStats.rank.rating", graph-state="vm.graphState")

        history-graph(promise="vm.historyPromise", rating="vm.typeStats.rank.rating", graph-state="vm.graphState")

    hr(ng-if="vm.history && vm.viewing == 'stats'")

    .bottom(ng-show="vm.viewing == 'stats'")
      h2.detailed Details

      ul.vertical-stats
        li.first
          .left Win Percentage
          .right {{vm.typeStats.submissions.winPercent | percentage | empty}}

        li(ng-hide="vm.nonRated")
          .left Country Rank
          .right {{vm.typeStats.rank.overallCountryRank | empty}}

        li(ng-hide="vm.nonRated")
          .left Volatility
          .right {{vm.typeStats.rank.volatility | empty}}

        li(ng-hide="vm.nonRated")
          .left Maximum Rating
          .right {{vm.typeStats.rank.maxRating | empty}}

        li(ng-if="profileVm.isUser")
          .left Inquiries
          .right {{vm.typeStats.submissions.numInquiries | empty}}

        li(ng-if="profileVm.isUser")
          .left Submissions
          .right {{vm.typeStats.submissions.submissions | empty}}

        li
          .left Submission Rate
          .right {{vm.typeStats.submissions.submissionRate | percentage | empty}}

        li(ng-if="profileVm.isUser")
          .left Passed Screening
          .right {{vm.typeStats.submissions.passedScreening | empty}}

        li
          .left Screening Success Rate
          .right {{vm.typeStats.submissions.screeningSuccessRate | percentage | empty}}

        li(ng-if="profileVm.isUser")
          .left Passed Review
          .right {{vm.typeStats.submissions.passedReview | empty}}

        li
          .left Review Success Rate
          .right {{vm.typeStats.submissions.reviewSuccessRate | percentage | empty}}

        li(ng-if="profileVm.isUser")
          .left Appeals
          .right {{vm.typeStats.submissions.appeals | empty}}

        li
          .left Appeals Success Rate
          .right {{vm.typeStats.submissions.appealSuccessRate | percentage | empty}}

        li(ng-if="profileVm.isUser")
          .left Maximum Score
          .right {{vm.typeStats.submissions.maxScore | empty}}

        li(ng-if="profileVm.isUser")
          .left Minimum Score
          .right {{vm.typeStats.submissions.minScore | empty}}

        li(ng-if="profileVm.isUser")
          .left Average Score
          .right {{vm.typeStats.submissions.avgScore | number: 2 | empty}}

        li
          .left Average Placement
          .right {{vm.typeStats.submissions.avgPlacement | number: 2 | empty}}
